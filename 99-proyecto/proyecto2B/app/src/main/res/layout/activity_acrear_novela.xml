<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ACrearNovela">

    <EditText
        android:id="@+id/et_titulo_novela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:ems="10"
        android:hint="Titulo de la novela"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/et_descripcion_novela"
        app:layout_constraintEnd_toEndOf="@+id/et_descripcion_novela"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_descripcion_novela" />

    <EditText
        android:id="@+id/et_descripcion_novela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:ems="10"
        android:hint="DescripciÃ³n de la novela"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/et_likes_novela"
        app:layout_constraintEnd_toEndOf="@+id/et_likes_novela"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_likes_novela" />

    <EditText
        android:id="@+id/et_likes_novela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:ems="10"
        android:hint="Likes de la novela"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/btn_crear_novela"
        app:layout_constraintEnd_toEndOf="@+id/btn_crear_novela"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@+id/btn_crear_novela" />

    <Button
        android:id="@+id/btn_crear_novela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear Novela"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>