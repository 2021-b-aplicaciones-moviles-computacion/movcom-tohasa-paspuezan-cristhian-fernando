<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ACrearFutbolista">

    <EditText
        android:id="@+id/et_nombre_futbolista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:ems="10"
        android:hint="Nombre del futbolista"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/et_actividad_futbolista"
        app:layout_constraintEnd_toEndOf="@+id/et_actividad_futbolista"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/et_actividad_futbolista" />

    <EditText
        android:id="@+id/et_actividad_futbolista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:ems="10"
        android:hint="Actividad"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/et_promediogpp_futbolista"
        app:layout_constraintEnd_toEndOf="@+id/et_promediogpp_futbolista"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_promediogpp_futbolista" />

    <EditText
        android:id="@+id/et_promediogpp_futbolista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:ems="10"
        android:hint="Promedio de goles por partido"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/btn_crear_futbolista"
        app:layout_constraintEnd_toEndOf="@+id/btn_crear_futbolista"
        app:layout_constraintStart_toStartOf="@+id/btn_crear_futbolista" />

    <Button
        android:id="@+id/btn_crear_futbolista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />
</androidx.constraintlayout.widget.ConstraintLayout>